{
    "name"         : "node-red-contrib-cloudera",
    "version"      : "0.0.3",
    "description"  : "A collection of Node-RED nodes for integrating with Cloudera's software distribution including Apache Hadoop. Includes nodes for producing and consuming Apache Kafka messages, as well as Apache Avro serialization and deserialization.",
    "dependencies" : {
        "kafka-node" : "<=1.6.2",
        "avro-js" : ">=1.8.0"
    },
    "repository" : {
        "type" : "git",
        "url"  : "https://github.com/jcoopere/node-red-contrib-cloudera"
    },
    "license"  : "SEE LICENSE IN LICENSE",
    "keywords" : [ "node-red", "cloudera", "apache", "hadoop", "kafka", "avro", "producer", "consumer" ],
    "node-red" : {
        "nodes" : {
            "kafka producer" : "kafka-nodes/kafka_producer.js",
            "kafka consumer" : "kafka-nodes/kafka_consumer.js",
            "avro" : "avro-nodes/avro.js"
        }
    },
    "author" : {
        "name" : "Jonathan Cooper-Ellis",
        "email": "jcooperellis@cloudera.com"
    }
}
